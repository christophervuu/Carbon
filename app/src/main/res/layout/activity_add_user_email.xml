<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddUserEmailActivity">

    <TextView
        android:id="@+id/AddUserEmailTextViewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the email address you wish to add to your account."
        />

    <EditText
        android:id="@+id/AddUserEmailEditTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddUserEmailTextViewText"
        android:hint="Email"/>

    <Button
        android:id="@+id/AddUserEmailButtonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddUserEmailEditTextEmail"
        android:text="Confirm"/>

</RelativeLayout>