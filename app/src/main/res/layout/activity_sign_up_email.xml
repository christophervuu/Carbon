<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUpEmail">

    <ImageView
        android:id="@+id/SignUpEmailImageViewBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"/>

    <TextView
        android:id="@+id/SignUpEmailTextViewText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUpEmailImageViewBack"
        android:text="Enter your email and password."/>


    <EditText
        android:id="@+id/SignUpEmailEditTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUpEmailTextViewText1"
        android:hint="Email"/>

    <EditText
        android:id="@+id/SignUpEmailEditTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SignUpEmailEditTextEmail"
        android:hint="Password"/>

    <Button
        android:id="@+id/SignUpEmailButtonContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/SignUpEmailEditTextPassword"
        android:text="Continue"/>

</RelativeLayout>