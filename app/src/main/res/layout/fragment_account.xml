<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/FragmentAccountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Users"
        android:textSize="30dp"/>

    <TextView
        android:id="@+id/FragmentAccountUserList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_below="@+id/FragmentAccountText"/>

    <Button
        android:id="@+id/FragmentAccountButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FragmentAccountUserList"
        android:layout_marginTop="20dp"
        android:onClick="ActivityToAddUserEmail"
        android:text="Add an User to Your Account"/>

</RelativeLayout>